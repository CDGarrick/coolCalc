<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.example.caleb.mycoolcalc.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:textSize="@dimen/my_text_size"
        android:background="@color/grayBackground"
        android:id="@+id/result"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="AC"
            android:textSize="@dimen/my_text_size"
            android:background="@color/grayBackground"
            android:onClick="buttonClear"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="@dimen/my_text_size"
            android:background="@color/grayBackground"
            android:onClick="buttonInverse"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="%"
            android:textSize="@dimen/my_text_size"
            android:background="@color/grayBackground"
            android:onClick="buttonPercent"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="/"
            android:textSize="@dimen/my_text_size"
            android:background="@color/grayBackground"
            android:onClick="buttonDivide"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="@string/seven"
        android:textSize="@dimen/my_text_size"
        android:background="@color/grayBackground"
        android:onClick="buttonSeven"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="@string/eight"
        android:textSize="@dimen/my_text_size"
        android:background="@color/grayBackground"
        android:onClick="buttonEight"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="@string/nine"
        android:textSize="@dimen/my_text_size"
        android:background="@color/grayBackground"
        android:onClick="buttonNine"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="x"
        android:textSize="@dimen/my_text_size"
        android:background="@color/grayBackground"
        android:onClick="buttonTimes"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/four"
            android:textSize="@dimen/my_text_size"
            android:background="@color/grayBackground"
            android:onClick="buttonFour"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/five"
            android:textSize="@dimen/my_text_size"
            android:background="@color/grayBackground"
            android:onClick="buttonFive"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/six"
            android:textSize="@dimen/my_text_size"
            android:background="@color/grayBackground"
            android:onClick="buttonSix"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="@dimen/my_text_size"
            android:background="@color/grayBackground"
            android:onClick="buttonMinus"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/one"
            android:textSize="@dimen/my_text_size"
            android:background="@color/grayBackground"
            android:onClick="buttonOne"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/two"
            android:textSize="@dimen/my_text_size"
            android:background="@color/grayBackground"
            android:onClick="buttonTwo"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/three"
            android:textSize="@dimen/my_text_size"
            android:background="@color/grayBackground"
            android:onClick="buttonThree"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="@dimen/my_text_size"
            android:background="@color/grayBackground"
            android:onClick="buttonPlus"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:text="0"
            android:textSize="@dimen/my_text_size"
            android:background="@color/grayBackground"
            android:onClick="buttonZero"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="@dimen/my_text_size"
            android:background="@color/grayBackground"
            android:onClick="buttonDecimal"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="="
            android:textSize="@dimen/my_text_size"
            android:background="@color/grayBackground"
            android:onClick="buttonEquals"
            />
    </LinearLayout>

</LinearLayout>